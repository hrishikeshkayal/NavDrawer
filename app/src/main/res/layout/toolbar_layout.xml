<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/layoutContainer"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="58dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/drawable_left_icon"
            android:src="@drawable/blank"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:padding="0dp"
            android:layout_centerInParent="true"
            android:background="@color/transparent"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <LinearLayout
            android:id="@+id/toolbarInner"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_toRightOf="@+id/drawable_left_icon"
            android:layout_toLeftOf="@+id/drawable_right_icon"
            android:orientation="horizontal"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:visibility="gone"
                android:src="@drawable/blank"
                android:id="@+id/toolbarLogo"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/toolbarTitle"
                android:visibility="gone"
                android:text=""
                android:textSize="23sp"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/toolbarInnerCustom"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </RelativeLayout>
        </LinearLayout>
        <ImageButton
            android:id="@+id/drawable_right_icon"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/blank"
            android:scaleType="fitXY"
            android:padding="0dp"
            android:background="@color/transparent"
            android:layout_width="25dp"
            android:layout_height="25dp" />

    </RelativeLayout>



</LinearLayout>